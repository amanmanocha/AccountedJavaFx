				<Label contentDisplay="CENTER" text="Transaction" textAlignment="CENTER" textFill="WHITE">
					<font>
						<Font size="12.0" />
					</font>
					<VBox.margin>
						<Insets left="25.0" />
					</VBox.margin>
				</Label>
				<CheckComboBox fx:id="cbTransactions" prefHeight="30.0" prefWidth="246.0">
