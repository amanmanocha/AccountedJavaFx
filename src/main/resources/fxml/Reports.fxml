				<CheckComboBox fx:id="cbInitiators" prefHeight="30.0" prefWidth="246.0">
					<VBox.margin>
						<Insets left="25.0" />
					</VBox.margin>
				</CheckComboBox>
				<Label contentDisplay="CENTER" text="Departments" textAlignment="CENTER" textFill="WHITE">
