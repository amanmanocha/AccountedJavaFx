								<DropShadow blurType="ONE_PASS_BOX" color="#1965d0" />
							</effect>
						</Button>
						<Button fx:id="saveTransaction" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#generateReports" prefHeight="30.0" prefWidth="85.0" styleClass="btnGreen" text="Generate" textFill="WHITE">
